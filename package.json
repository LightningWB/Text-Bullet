{
  "name": "text-bullet",
  "version": "1.1.0",
  "description": "a custom backend for the travelers with plugin support",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && Xcopy /E /Y .\\www\\ .\\build\\www\\ && Xcopy /E /Y .\\views\\ .\\build\\views\\ && node ./build && pkg ."
  },
  "pkg": {
    "assets": [
      "node_modules/**/*",
      "build/src/*",
      "build/index.js",
      "build/views/*",
      "build/views/**/*",
      "build/www/*",
      "build/www/**/*",
      "build/package.json"
    ],
    "targets": [
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64",
      "node14-macos-arm64",
      "node14-linux-arm64"
    ],
    "outputPath": "./dist"
  },
  "bin": "./build/index.js",
  "author": "LightningWB",
  "license": "MIT",
  "dependencies": {
    "@2toad/profanity": "^1.3.1",
    "@replit/database": "^2.0.1",
    "@types/webgl-ext": "0.0.32",
    "base-64": "^1.0.0",
    "cookie": "^0.4.1",
    "express": "^4.17.2",
    "express-handlebars": "^6.0.2",
    "express-rate-limit": "^6.0.1",
    "hcaptcha": "^0.1.0",
    "joi": "^17.4.0",
    "mongodb": "^3.7.3",
    "priority-events": "^1.0.0",
    "recaptcha2": "^1.3.3",
    "simple-json-db": "^1.2.3",
    "socket.io": "^4.1.3",
    "toml": "^3.0.0",
    "uglify-js": "^3.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongodb": "^3.6.12",
    "@types/node": "^16.4.3",
    "pkg": "^5.4.1"
  }
}
